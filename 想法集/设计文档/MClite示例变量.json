                  "$meta": { "extensible": true },
                  "第七条": {
                    "title": "第七条",
                    "content": "本处女性人员录用须符合以下基本条件：",
                    "order": 1,
                    "children": {
                      "$meta": { "extensible": true },
                      "一": {
                        "title": "一、年龄要求",
                        "content": "录用年龄范围：18周岁（含）至28周岁（含）。年满28周岁的在职人员，将于当年度自动调离本处。",
                        "order": 1
                      },
                      "二": {
                        "title": "二、学历及能力要求",
                        "content": "具备相应岗位所需的专业知识与业务能力，通过本处组织的专项考核。",
                        "order": 2
                      }
                    }
                  }
